CloseBtn.TextScaled = true

-- Función para teletransportarse a la base si tienes la Capa Láser
local function TeleportToBase()
    local player = game.Players.LocalPlayer
    local backpack = player:FindFirstChild("Backpack")
    local character = player.Character or player.CharacterAdded:Wait()
    local hasLaserCape = false

    -- Buscar la Capa Láser en el Backpack o en el Character
    for _, item in ipairs(backpack:GetChildren()) do
        if item.Name:lower():find("capa") or item.Name:lower():find("laser") then
            hasLaserCape = true
            break
        end
    end
    for _, item in ipairs(character:GetChildren()) do
        if item.Name:lower():find("capa") or item.Name:lower():find("laser") then
            hasLaserCape = true
            break
        end
    end

    if hasLaserCape then
        -- Buscar la base del jugador (ajusta el nombre si es diferente)
        local bases = workspace:FindFirstChild("Bases")
        if bases then
            local myBase = bases:FindFirstChild(player.Name)
            if myBase and myBase:FindFirstChild("CollectZone") then
                character:MoveTo(myBase.CollectZone.Position)
            else
                warn("No se encontró tu base o zona de colección.")
            end
        else
            warn("No se encontró la carpeta de Bases.")
        end
    else
        warn("No tienes la Capa Láser equipada.")
    end
end

BtnTeleportBase.MouseButton1Click:Connect(function()
    TeleportToBase()
end)

local autoTeleport = false

BtnAutoTeleport.MouseButton1Click:Connect(function()
    autoTeleport = not autoTeleport
    BtnAutoTeleport.Text = autoTeleport and "Auto ON" or "Auto ir a base con Capa Láser"
    if autoTeleport then
        while autoTeleport do
            TeleportToBase()
            wait(2) -- cada 2 segundos revisa si tienes la capa y te teleporta
        end
    end
end)

CloseBtn.MouseButton1Click:Connect(function()
    SenkoHub:Destroy()
end)
